{
  "name": "sweepcrm",
  "version": "0.1.0",
  "description": "Chimney Sweep Customer Management System",
  "main": "out/main/index.js",
  "author": "Jim Davies",
  "license": "MIT",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "npm run type-check && electron-vite build",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "type-check": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "npm run build && playwright test",
    "test:e2e": "npm run build && playwright test --reporter=html --reporter=list",
    "test:e2e:ui": "npm run build && playwright test --ui",
    "test:e2e:debug": "npm run build && playwright test --debug",
    "test:ui": "playwright test --ui"
  },
  "dependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "better-sqlite3": "^12.5.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@electron-toolkit/preload": "^3.0.0",
    "@electron-toolkit/utils": "^3.0.0",
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.40.1",
    "@tailwindcss/postcss": "^4.0.0",
    "@types/node": "^20.19.25",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.0",
    "electron": "^39.2.5",
    "electron-builder": "^24.6.4",
    "electron-vite": "^2.0.0",
    "eslint": "^8.50.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^16.5.0",
    "postcss": "^8.4.31",
    "postcss-nesting": "^12.0.0",
    "prettier": "^3.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.2.0",
    "vite": "^5.0.0"
  }
}
